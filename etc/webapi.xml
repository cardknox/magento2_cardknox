<?xml version="1.0"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <!-- Managing checkout calculate-tax for guest -->
    <route url="/V1/guest-carts/:cartId/calculate-tax" method="POST">
        <service class="CardknoxDevelopment\Cardknox\Api\GuestTaxCalculatorInterface" method="calculate"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <!-- Managing checkout calculate-tax -->
    <route url="/V1/carts/mine/calculate-tax" method="POST">
        <service class="CardknoxDevelopment\Cardknox\Api\TaxCalculatorInterface" method="calculate" />
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>
</routes>
